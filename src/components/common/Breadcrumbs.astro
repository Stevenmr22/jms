---
interface Props {
	paths: {
		label: string;
		url: string;
		current?: boolean;
	}[];
}

const { paths } = Astro.props;
---

<nav class="mb-8 text-sm breadcrumbs">
  <ol class="flex space-x-2 text-gray-600">
    {paths.map((path, index) => (
      <>
        {index > 0 && <li>/</li>}
        <li>
          {path.current ? (
            <span class="text-gray-900 font-medium">{path.label}</span>
          ) : (
            <a href={path.url} class="hover:text-blue-600 transition">
              {path.label}
            </a>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>