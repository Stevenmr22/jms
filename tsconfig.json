{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@data/*": ["src/data/*"],
			"@pages/*": ["src/pages/*"],
			"@layouts/*": ["src/layouts/*"],
			"@components/*": ["src/components/*"],
			"@public/*": ["public/*"],
			"@icons/*": ["src/components/icons/*"],
			"@interfaces/*": ["src/interfaces/*"],
			"@utils/*": ["src/utils/*"]
		}
	}
}
